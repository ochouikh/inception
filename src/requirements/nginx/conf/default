server {
	listen	443 ssl;
	server_name ochouikh.42.fr;

	ssl_protocols TLSv1.3;
	ssl_certificate	/etc/nginx/ochouikh.42.fr.crt;
	ssl_certificate_key	/etc/nginx/ochouikh.42.fr.key;

	root	/var/www/html;
	index	index.php;

	location ~ \.php$ {
		include	snippets/fastcgi-php.conf;
		fastcgi_pass wordpress:9000;
	}
}
